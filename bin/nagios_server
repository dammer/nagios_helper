#!/usr/bin/env ruby

$:.unshift(File.expand_path(File.join(File.dirname(__FILE__), %w{.. lib})))
require 'nagios_check/boot'
require 'rack'

raise "RAILS_ROOT not found" unless defined?(RAILS_ROOT)
require File.join(RAILS_ROOT, %w{config environment})

require 'nagios_check'

Rack # preload
Rack::Server # preload

$default_nagios_server_condig = File.expand_path(File.join(File.dirname(__FILE__), %w{.. lib nagios_check nagios_server_default.ru}))

module Rack
  class Server 
    def default_options
      {
        :environment => ENV['RAILS_ENV'] || "development",
        :pid         => nil,
        :Port        => 9292,
        :Host        => "0.0.0.0",
        :AccessLog   => [],
        :config      => $default_nagios_server_condig
      }
    end
  end
end

Rack::Server.start